<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:pages="clr-namespace:DevMobileIUT.Pages"
       x:Class="DevMobileIUT.MainPage"
       BackgroundColor="Black" Shell.TabBarTitleColor="White" Shell.TabBarUnselectedColor="Gray">

    <TabBar>
        <Tab Route="Home" Title="Accueil" Icon="accueil.png">
            <ShellContent>
                <pages:Accueil></pages:Accueil>
            </ShellContent>
        </Tab>
        <Tab Route="Top" Title="Top France" Icon="topfrance.png">
            <ShellContent>
                <pages:TopFrance></pages:TopFrance>
            </ShellContent>
        </Tab>
        <Tab Route="Add" Title="Ajouter" Icon="ajouter.png">
            <ShellContent>
                <pages:Ajouter></pages:Ajouter>
            </ShellContent>
        </Tab>
        <Tab Route="PersonalList" Title="Liste" Icon="loupe.png">
            <ShellContent >
                <pages:ListePerso></pages:ListePerso>
            </ShellContent>
        </Tab>
        <Tab Route="search" Title="Rechercher" Icon="loupe.png">
            <ShellContent >
                <pages:Rechercher></pages:Rechercher>
            </ShellContent>
        </Tab>
    </TabBar>
    
</Shell>
