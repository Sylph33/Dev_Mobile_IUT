<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DevMobileIUT.Pages.Ajouter">
    <ContentPage.Content>
        <FlexLayout>
            <StackLayout>
                <Label x:Name="labelName" Text="Pochette :" VerticalTextAlignment="Center" Margin="0,0,10,0" TextColor="#666666" FontAttributes="bold" FontSize="18"/>
                <ImageButton x:Name="pochettePicker" Source="globeNav.png" Clicked="OnPickImageClick" HorizontalOptions="End" HeightRequest="100" WidthRequest="100" MinimumHeightRequest="100" MinimumWidthRequest="100"/>
                <Label x:Name="labelName1" Text="Titre :" VerticalTextAlignment="Center" Margin="0,0,10,0" TextColor="#666666" FontAttributes="bold" FontSize="18"/>
                <Entry WidthRequest="150" x:Name="songName" />
                <Label x:Name="labelName2" Text="Album :" VerticalTextAlignment="Center" Margin="0,0,10,0" TextColor="#666666" FontAttributes="bold" FontSize="18"/>
                <Entry WidthRequest="150" x:Name="albumName" />
                <Label x:Name="labelName3" Text="Artiste :" VerticalTextAlignment="Center" Margin="0,0,10,0" TextColor="#666666" FontAttributes="bold" FontSize="18"/>
                <Entry WidthRequest="150" x:Name="artistName" />
                <Label x:Name="labelName4" Text="Date de sortie :" VerticalTextAlignment="Center" Margin="0,0,10,0" TextColor="#666666" FontAttributes="bold" FontSize="18"/>
                <DatePicker x:Name="songDate"/>
                <Button Text="Ajouter" Clicked="OnButtonClicked"/>
                <CollectionView ItemsSource="{Binding ListOfAdds}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <FlexLayout>
                                <Label Text="{Binding ID}"/>
                                <Label Text="{Binding Titre}"/>
                                <Label Text="{Binding Artiste}"/>
                                <Label Text="{Binding Annee}"/>
                                <Image Source="{Binding Pochette}"/>
                            </FlexLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </FlexLayout>
    </ContentPage.Content>
</ContentPage>